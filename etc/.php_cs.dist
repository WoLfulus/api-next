<?php

$finder = PhpCsFixer\Finder::create()
    ->exclude(["vendor"])
    ->in(__DIR__."/../")
    ->append([
        __DIR__."/../bin/directus"
    ]);

return PhpCsFixer\Config::create()
    ->setRiskyAllowed(true)
    ->setLineEnding("\n")
    ->setRules([
        "@PhpCsFixer" => true,
        "@PhpCsFixer:risky" => true,
        "declare_strict_types" => true,
        "yoda_style" => false,
    ])
    ->setCacheFile(__DIR__."/.php_cs.cache")
    ->setFinder($finder);
