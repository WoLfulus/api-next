{
  "name": "directus/directus",
  "description": "Directus",
  "license": "GPLv3",
  "keywords": [
    "directus",
    "laravel"
  ],
  "authors": [
    {
      "name": "WoLfulus",
      "email": "wolfulus@gmail.com"
    }
  ],
  "bin": [
    "./bin/directus"
  ],
  "require": {
    "php": ">=7.2"
  },
  "require-dev": {
    "cedx/coveralls": "^11.2",
    "friendsofphp/php-cs-fixer": "^2.16",
    "phpstan/extension-installer": "^1.0",
    "phpstan/phpstan": "^0.12.4",
    "phpstan/phpstan-phpunit": "^0.12.5",
    "phpstan/phpstan-strict-rules": "^0.12.1",
    "phpunit/phpunit": "^8"
  },
  "autoload": {
    "psr-4": {
      "Directus\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Directus\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "test": "phpunit --bootstrap vendor/autoload.php --testdox tests",
    "test:lint": "php-cs-fixer fix --verbose --diff --dry-run --config=etc/.php_cs.dist",
    "test:analysis": "phpstan --ansi --configuration=etc/phpstan.neon analyse",
    "test:coverage": "phpunit --bootstrap vendor/autoload.php --testdox --coverage-html=var/coverage --coverage-clover=var/coverage.xml --whitelist=src tests",
    "test:coverage:report": "coveralls var/coverage.xml",
    "lint": "php-cs-fixer fix --config=etc/.php_cs.dist"
  },
  "config": {
    "sort-packages": true,
    "optimize-autoloader": true
  }
}
