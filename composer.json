{
  "name": "directus/directus",
  "description": "Directus",
  "license": "GPLv3",
  "keywords": [
    "directus",
    "laravel"
  ],
  "authors": [
    {
      "name": "WoLfulus",
      "email": "wolfulus@gmail.com"
    }
  ],
  "bin": [
    "./bin/directus"
  ],
  "require": {
    "php": ">=7.3",
    "doctrine/dbal": "^2.10",
    "illuminate/config": "^6.16",
    "illuminate/console": "^6",
    "illuminate/database": "^6",
    "illuminate/events": "^6",
    "illuminate/http": "^6",
    "illuminate/routing": "^6",
    "illuminate/support": "^6",
    "webmozart/path-util": "^2.3"
  },
  "require-dev": {
    "cedx/coveralls": "^11.2",
    "friendsofphp/php-cs-fixer": "^2.16",
    "nunomaduro/larastan": "^0.5.1",
    "orchestra/testbench": "^4.0",
    "phpstan/extension-installer": "^1.0",
    "phpstan/phpstan": "^0.12",
    "phpstan/phpstan-phpunit": "^0.12",
    "phpstan/phpstan-strict-rules": "^0.12",
    "phpunit/phpunit": "^9"
  },
  "autoload": {
    "psr-4": {
      "Directus\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Directus\\Tests\\": "tests/src/",
      "Directus\\Tests\\Helpers\\": "tests/helpers/"
    }
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "scripts": {
    "format": "php-cs-fixer --ansi fix",
    "lint:php-cs-fixer": "php-cs-fixer --ansi fix --diff --dry-run",
    "lint:phpstan": "phpstan --ansi --memory-limit=2G analyse",
    "lint": [
      "@lint:php-cs-fixer",
      "@lint:phpstan"
    ],
    "ci": [
      "@lint",
      "@test"
    ],
    "test": "phpunit --colors=always",
    "coverage:report": "coveralls dist/coverage.xml"
  },
  "config": {
    "sort-packages": true,
    "preferred-install": "dist",
    "optimize-autoloader": true
  },
  "extra": {
    "laravel": {
      "providers": [
        "Directus\\Laravel\\Providers\\DirectusProvider"
      ]
    }
  }
}
