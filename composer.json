{
  "name": "directus/directus",
  "description": "Directus",
  "license": "GPLv3",
  "keywords": [
    "directus",
    "laravel"
  ],
  "authors": [
    {
      "name": "WoLfulus",
      "email": "wolfulus@gmail.com"
    }
  ],
  "bin": [
    "./bin/directus"
  ],
  "require": {
    "php": ">=7.2",
    "doctrine/dbal": "^2.10",
    "illuminate/config": "^6.16",
    "illuminate/console": "^6",
    "illuminate/database": "^6",
    "illuminate/events": "^6",
    "illuminate/http": "^6",
    "illuminate/routing": "^6",
    "illuminate/support": "^6",
    "webmozart/path-util": "^2.3"
  },
  "require-dev": {
    "cedx/coveralls": "^11.2",
    "friendsofphp/php-cs-fixer": "^2.16",
    "nunomaduro/larastan": "^0.5.1",
    "orchestra/testbench": "^4.0",
    "phpstan/extension-installer": "^1.0",
    "phpstan/phpstan": "^0.12",
    "phpstan/phpstan-phpunit": "^0.12",
    "phpstan/phpstan-strict-rules": "^0.12",
    "phpunit/phpunit": "^9"
  },
  "autoload": {
    "psr-4": {
      "Directus\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Directus\\Tests\\": "tests/src/",
      "Directus\\Tests\\Helpers\\": "tests/helpers/"
    }
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "scripts": {
    "task:linter": "php-cs-fixer fix --verbose --diff --dry-run --config=etc/.php_cs.dist",
    "task:static-analysis": "phpstan --memory-limit=2G --ansi --configuration=etc/phpstan.neon analyse",
    "task:test": "phpunit --colors=always --bootstrap vendor/autoload.php --testdox tests",
    "task:test:with-coverage": "phpunit --colors=always --bootstrap vendor/autoload.php --testdox --log-junit=./var/phpunit.xml --coverage-html=./var/html --coverage-clover=./var/coverage.xml --whitelist=src tests",
    "task:coverage:report": "coveralls var/coverage.xml",
    "test": [
      "@task:linter",
      "@task:static-analysis",
      "@task:test"
    ],
    "test:ci": [
      "@task:linter",
      "@task:static-analysis",
      "@task:test:with-coverage"
    ],
    "lint": "php-cs-fixer fix --verbose --diff --config=etc/.php_cs.dist"
  },
  "config": {
    "sort-packages": true,
    "preferred-install": "dist",
    "optimize-autoloader": true
  },
  "extra": {
    "laravel": {
      "providers": [
        "Directus\\Laravel\\Providers\\DirectusProvider"
      ]
    }
  }
}
